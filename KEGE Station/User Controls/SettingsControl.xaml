<UserControl x:Class="KEGE_Station.User_Controls.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1320">
    <UserControl.Resources>
        
        <ControlTemplate x:Key="NoMouseOverButtonTemplate" TargetType="Button">
            <Border x:Name="InnerBorder" Background="#ffffff" BorderBrush="#000000" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="15">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{x:Static SystemColors.ControlLightBrush}" />
                    <Setter Property="Foreground" Value="{x:Static SystemColors.GrayTextBrush}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="ComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontFamily" Value="/Resources/Fonts/#Inter"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="ItemBorder" Background="{TemplateBinding Background}" 
                            Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Border x:Name="TemplateRoot" 
                Background="{TemplateBinding Background}" 
                BorderBrush="{TemplateBinding BorderBrush}" 
                BorderThickness="{TemplateBinding BorderThickness}" 
                CornerRadius="5" SnapsToDevicePixels="true">
                <Border x:Name="SplitBorder" 
                    Width="30" 
                    HorizontalAlignment="Right" 
                    BorderBrush="Transparent" 
                    BorderThickness="0" 
                    Margin="0">
                    <Path x:Name="Arrow" 
                      Data="M 0 0 L 4 4 L 8 0" 
                      Fill="Transparent"
                      Stroke="Black" 
                      StrokeThickness="2" 
                      VerticalAlignment="Center" 
                      HorizontalAlignment="Center"/>
                </Border>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="TemplateRoot" Property="Background" Value="#F5F5F5"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="true">
                    <Setter TargetName="TemplateRoot" Property="Background" Value="#EEEEEE"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="FontFamily" Value="/Resources/Fonts/#Inter"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ItemContainerStyle" Value="{StaticResource ComboBoxItemStyle}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid x:Name="MainGrid" SnapsToDevicePixels="true">
                            <ToggleButton x:Name="ToggleButton" 
                                      Template="{StaticResource ComboBoxToggleButton}" 
                                      Background="{TemplateBinding Background}" 
                                      BorderBrush="{TemplateBinding BorderBrush}" 
                                      BorderThickness="{TemplateBinding BorderThickness}"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" 
                                      Grid.ColumnSpan="2"/>

                            <ContentPresenter x:Name="ContentSite" 
                                          IsHitTestVisible="False" 
                                          Content="{TemplateBinding SelectionBoxItem}" 
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                          ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" 
                                          Margin="{TemplateBinding Padding}" 
                                          VerticalAlignment="Center" 
                                          HorizontalAlignment="Left"/>

                            <Popup x:Name="Popup" 
                               Placement="Bottom" 
                               IsOpen="{TemplateBinding IsDropDownOpen}" 
                               AllowsTransparency="True" 
                               Focusable="False" 
                               PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder" 
                                    Background="White" 
                                    BorderBrush="Black" 
                                    BorderThickness="1.5" 
                                    CornerRadius="5" 
                                    Margin="0,2,0,0"
                                    MinWidth="{TemplateBinding ActualWidth}" 
                                    MaxHeight="300">
                                    <ScrollViewer SnapsToDevicePixels="True" Padding="1">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </UserControl.Resources>
    <Grid x:Name="SettingsControlPanel" Background="White">
        <StackPanel Margin="40">
            <Label Content="Настройки конфигураций" FontSize="45" FontWeight="Bold" Margin="0,0,0,30" FontFamily="/Resources/Fonts/#Inter"/>

            <TextBlock Text="База задач:" FontSize="30" Margin="5,0,0,5" FontFamily="/Resources/Fonts/#Inter"/>
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                
                <Border BorderBrush="Black" BorderThickness="2" CornerRadius="8">
                    <TextBox 
                        x:Name="Setting_TaskPath" FontSize="20" Padding="5" BorderThickness="0" 
                        Margin="2" FontFamily="/Resources/Fonts/#Inter" FontWeight="SemiBold" 
                        VerticalContentAlignment="Center"
                        />
                </Border>
                
                <Button 
                    x:Name="BrowseTaskBase_btn"
                    Grid.Column="1" Content="..." Margin="10,0,0,0" Template="{StaticResource NoMouseOverButtonTemplate}" 
                    Height="50" FontSize="20" Click="Browse_Click" Tag="TaskPath" BorderThickness="2"
                    />
            </Grid>

            <TextBlock Text="Таблица баллов:" FontSize="30" Margin="5,0,0,5" FontFamily="/Resources/Fonts/#Inter"/>
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                
                <Border BorderBrush="Black" BorderThickness="2" CornerRadius="8">
                    <TextBox 
                        x:Name="Setting_ScoreTable" FontSize="20" Padding="5" BorderThickness="0" 
                        Margin="2" FontFamily="/Resources/Fonts/#Inter" FontWeight="SemiBold" 
                        VerticalContentAlignment="Center"
                        />
                </Border>
                
                <Button
                    x:Name="BrowseScoreTable_btn"
                    Grid.Column="1" Content="..." Margin="10,0,0,0" Template="{StaticResource NoMouseOverButtonTemplate}" 
                    Height="50" FontSize="20" Click="Browse_Click" Tag="ScoreTable" BorderThickness="2"
                    />
            </Grid>

            <TextBlock Text="Варианты:" FontSize="30" Margin="5,0,0,5" FontFamily="/Resources/Fonts/#Inter"/>
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                
                <Border BorderBrush="Black" BorderThickness="2" CornerRadius="8">
                    <TextBox 
                        x:Name="Setting_OptionsPath" FontSize="18" Padding="5" BorderThickness="0" 
                        Margin="2" FontFamily="/Resources/Fonts/#Inter" FontWeight="SemiBold" 
                        VerticalContentAlignment="Center"
                        />
                </Border>
                
                <Button
                    x:Name="BrowseOptions_btn"
                    Grid.Column="1" Content="..." Margin="10,0,0,0" Template="{StaticResource NoMouseOverButtonTemplate}" 
                    Height="50" FontSize="20" Click="Browse_Click" Tag="OptionsPath" BorderThickness="2"
                    />
            </Grid>

            <TextBlock Text="Ответы:" FontSize="30" Margin="5,0,0,5" FontFamily="/Resources/Fonts/#Inter"/>
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                
                <Border BorderBrush="Black" BorderThickness="2" CornerRadius="8">
                    <TextBox 
                        x:Name="Setting_AnswersPath" FontSize="20" Padding="5" BorderThickness="0"
                        Margin="2" FontFamily="/Resources/Fonts/#Inter" FontWeight="SemiBold" 
                        VerticalContentAlignment="Center"
                        />
                </Border>
                
                <Button
                    x:Name="BrowseAnswers_btn"
                    Grid.Column="1" Content="..." Margin="10,0,0,0" Template="{StaticResource NoMouseOverButtonTemplate}" 
                    Height="50" FontSize="20" Click="Browse_Click" Tag="AnswersPath" BorderThickness="2"
                    />
            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button 
                    x:Name="SaveSettings_btn" Content="Сохранить" Width="200" Height="60" 
                    FontFamily="/Resources/Fonts/#Inter" FontSize="25" FontWeight="SemiBold" 
                    Template="{StaticResource NoMouseOverButtonTemplate}" Click="SaveSettings_btn_Click"
                    BorderThickness="3"
                    />
            </StackPanel>

            <Border BorderBrush="#888" BorderThickness="0,2,0,0" Margin="0,20,0,0" Padding="0,20,0,0">
                <StackPanel>
                    <Label Content="Добавить задание в базу" FontSize="28" FontWeight="Bold" Margin="0,0,0,15" FontFamily="/Resources/Fonts/#Inter"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1.2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Margin="0,0,15,10">
                            <TextBlock Text="№ Задания:" FontSize="18" Margin="5,0,0,3" FontFamily="/Resources/Fonts/#Inter"/>
                            <ComboBox x:Name="TaskNumber_ComboBox" Height="40" FontSize="16" 
                          Style="{StaticResource ModernComboBox}" SelectionChanged="TaskNumber_ComboBox_SelectionChanged"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="0,0,0,10">
                            <TextBlock Text="Изображение (.png):" FontSize="18" Margin="5,0,0,3" FontFamily="/Resources/Fonts/#Inter"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border BorderBrush="#000" BorderThickness="2" CornerRadius="5">
                                    <TextBox 
                                        x:Name="NewTask_ImagePath" FontSize="14" Padding="5,2" BorderThickness="0" 
                                        IsReadOnly="True" VerticalContentAlignment="Center" Margin="5"
                                        FontWeight="SemiBold"
                                        />
                                    
                                </Border>
                                
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button 
                                        x:Name="PNG_btn"
                                        Content="..." Width="60" Height="40" FontSize="20"
                                        Template="{StaticResource NoMouseOverButtonTemplate}" Click="BrowseFile_Click" 
                                        Tag="PNG" BorderThickness="2" Margin="5,0,0,0" 
                                        FontWeight="SemiBold"
                                        />
                                    
                                </StackPanel>
                            </Grid>
                        </StackPanel>
 
                        <!-- || Ответы || -->
                        <StackPanel Grid.Row="1" Margin="0,0,15,0">
                            <TextBlock Text="Ответ(ы):" FontSize="18" Margin="5,0,0,3" FontFamily="/Resources/Fonts/#Inter"/>

                            <Grid x:Name="SingleAnswerArea" Visibility="Visible">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border BorderBrush="#000" BorderThickness="2" CornerRadius="5">
                                    <TextBox 
                                        x:Name="NewTask_AnswerPath" FontSize="14" Padding="5,2" BorderThickness="0" 
                                        IsReadOnly="True" VerticalContentAlignment="Center" Margin="5"
                                        FontWeight="SemiBold"
                                        />
                                </Border>
                                
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button 
                                        x:Name="SingelAnswer_btn"
                                        Content="..." Width="60" Height="40" FontSize="20"
                                        Template="{StaticResource NoMouseOverButtonTemplate}" Click="BrowseFile_Click" 
                                        Tag="TXT" BorderThickness="2" Margin="5,0,0,0" 
                                        FontWeight="SemiBold"
                                        />
                                    
                                </StackPanel>
                            </Grid>

                            <!-- || 19 - 21 || -->
                            <StackPanel x:Name="TripleAnswerArea" Visibility="Collapsed">
                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border BorderBrush="#000" BorderThickness="2" CornerRadius="5">
                                        <TextBox 
                                            x:Name="Answer19_Path" FontSize="14" Padding="5.2" BorderThickness="0" 
                                            IsReadOnly="True" VerticalContentAlignment="Center" Margin="5"
                                            FontWeight="SemiBold"
                                            />
                                        
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button 
                                            x:Name="Task19_btn"
                                            Content="19" Width="60" Height="40" Margin="5,0,0,0" 
                                            Template="{StaticResource NoMouseOverButtonTemplate}" Click="BrowseFile_Click" 
                                            Tag="TXT19" FontSize="20" BorderThickness="2" FontWeight="SemiBold"
                                            />
                                        
                                    </StackPanel>
                                </Grid>
                                
                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border BorderBrush="#000" BorderThickness="2" CornerRadius="5">
                                        <TextBox 
                                            x:Name="Answer20_Path" FontSize="14" Padding="3" BorderThickness="0" 
                                            IsReadOnly="True" VerticalContentAlignment="Center" Margin="5"
                                            FontWeight="SemiBold"
                                            />
                                        
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button 
                                            x:Name="Task20_btn"
                                            Content="20" Width="60" Height="40" Margin="5,0,0,0" 
                                            Template="{StaticResource NoMouseOverButtonTemplate}" Click="BrowseFile_Click" 
                                            Tag="TXT20" FontSize="20" BorderThickness="2" FontWeight="SemiBold"
                                            />
                                        
                                    </StackPanel>
                                </Grid>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border BorderBrush="#000" BorderThickness="2" CornerRadius="5">
                                        <TextBox 
                                            x:Name="Answer21_Path" FontSize="14" Padding="3" BorderThickness="0" 
                                            IsReadOnly="True" VerticalContentAlignment="Center" Margin="5"
                                            FontWeight="SemiBold"
                                            />
                                        
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button
                                            x:Name="Task21_btn"
                                            Content="21" Width="60" Height="40" Margin="5,0,0,0" 
                                            Template="{StaticResource NoMouseOverButtonTemplate}" Click="BrowseFile_Click" 
                                            Tag="TXT21" FontSize="20" BorderThickness="2" FontWeight="SemiBold"
                                            />
                                        
                                    </StackPanel>
                                    
                                </Grid>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1">
                            <TextBlock Text="Доп. файлы:" FontSize="18" Margin="5,0,0,3" FontFamily="/Resources/Fonts/#Inter"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border BorderBrush="#000" BorderThickness="2" CornerRadius="5" MinHeight="40">
                                    <ListBox 
                                        x:Name="ExtraFiles_ListBox" 
                                        IsHitTestVisible="False"
                                        BorderThickness="0" 
                                        Background="Transparent" 
                                        MaxHeight="80" 
                                        VerticalAlignment="Center"
                                        ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock 
                                                    Text="{Binding Name}" 
                                                    ToolTip="{Binding FullName}"
                                                    TextAlignment="Center"
                                                    FontSize="14" FontWeight="SemiBold" Margin="2,0" 
                                                    />
                                                
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Border>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button
                                        x:Name="AditionalFiles_btn"
                                        Content="..." Width="60" Height="40" FontSize="24"
                                        Template="{StaticResource NoMouseOverButtonTemplate}" 
                                        Click="BrowseFile_Click" 
                                        Tag="ExtraMulti" BorderThickness="2" Margin="5,0,0,0"
                                        ToolTip="Добавить файлы"
                                        FontWeight="SemiBold"
                                        />

                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button 
                        x:Name="Clear_btn" Content="Отчистить" Width="220" Height="60"
                        HorizontalAlignment="Right" Margin="0 20 0 0" FontSize="25" FontWeight="SemiBold"
                        Template="{StaticResource NoMouseOverButtonTemplate}" Click="Clear_btn_Click" BorderThickness="3"
                        />
                    
                    <Button 
                        x:Name="AddTask_btn" Content="Добавить в базу" Width="220" Height="60"
                        HorizontalAlignment="Right" Margin="10 20 0 0" FontSize="25" FontWeight="SemiBold"
                        Template="{StaticResource NoMouseOverButtonTemplate}" Click="AddTask_btn_Click" BorderThickness="3"
                        />
                    </StackPanel>
                        
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</UserControl>