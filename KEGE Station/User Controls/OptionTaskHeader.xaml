<UserControl x:Class="KEGE_Station.User_Controls.OptionTaskHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KEGE_Station.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="1080">
    <Grid
        d:Background="#fff"
        Background="{Binding Background}"
        >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Column="0"
            Text="Номер задания"
            TextWrapping="Wrap"
            Margin="35 0 35 0"
            FontFamily="/Resources/Fonts/#Inter" FontWeight="SemiBold" FontSize="35"
            HorizontalAlignment="Right" VerticalAlignment="Center" TextAlignment="Center"
            />

        <TextBlock
            Grid.Column="1"
            Text="Баллы за номер"
            TextWrapping="Wrap"
            Margin="17 0 37 0"
            FontFamily="/Resources/Fonts/#Inter" FontWeight="SemiBold" FontSize="35"
            HorizontalAlignment="Right" VerticalAlignment="Center" TextAlignment="Center"
            />

        <TextBlock
            Grid.Column="2"
            Text="Добавить файлы"
            TextWrapping="Wrap"
            Margin="0 0 44 0"
            FontFamily="/Resources/Fonts/#Inter" FontWeight="SemiBold" FontSize="35"
            HorizontalAlignment="Right" VerticalAlignment="Center" TextAlignment="Center"
            />

        <TextBlock
            Grid.Column="3"
            Text="Кол-во файлов"
            TextWrapping="Wrap"
            Margin="0 0 85 0"
            FontFamily="/Resources/Fonts/#Inter" FontWeight="SemiBold" FontSize="35"
            HorizontalAlignment="Right" VerticalAlignment="Center" TextAlignment="Center"
            />

    </Grid>
</UserControl>
