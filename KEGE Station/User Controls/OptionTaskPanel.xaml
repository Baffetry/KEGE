<UserControl x:Class="KEGE_Station.User_Controls.OptionTaskPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KEGE_Station.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="160" d:DesignWidth="800">
    <UserControl.Resources>
        <ControlTemplate x:Key="NoMouseOverButtonTemplate" TargetType="Button">
            <Border x:Name="InnerBorder"
            Background="#ffffff"  
            BorderBrush="#000000"  
            BorderThickness="3"
            CornerRadius="15">
                <ContentPresenter HorizontalAlignment="Center"  
                          VerticalAlignment="Center" />
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{x:Static SystemColors.ControlLightBrush}" />
                    <Setter Property="Foreground" Value="{x:Static SystemColors.GrayTextBrush}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </UserControl.Resources>
    <Border
        BorderBrush="#000"
        BorderThickness="3"
        CornerRadius="15"
        d:Background="#fff"
        Background="{Binding Background}"
        Margin="0 10"
        >

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="_taskNumber"
                Grid.Column="0"
                Margin="25 25 25 20"
                Width="70"
                d:Text="#"
                FontFamily="/Resources/Fonts/#Inter" FontWeight="SemiBold" FontSize="40"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                TextAlignment="Center"
                />

            <TextBox
                x:Name="_taskWeight"
                Grid.Column="1"
                BorderThickness="0 0 0 1"
                BorderBrush="#000"
                Margin="25 25 25 20"
                Width="70"
                d:Text="#"
                MaxLength="1"
                FontFamily="/Resources/Fonts/#Inter" FontWeight="SemiBold" FontSize="40"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                PreviewTextInput="_taskWeight_PreviewTextInput"
                />

            <Button
                x:Name="_taskAddFileButton"
                Grid.Column="2"
                Width="70"
                Height="70"
                Click="_taskAddFileButton_Click"
                Template="{StaticResource NoMouseOverButtonTemplate}"
                >
                <Image Source="/Resources/Icons/plus96x96.png" Height="50" Width="50"/>
            </Button>

            <Button
                x:Name="_taskFilesAmountButton"
                Grid.Column="3"
                Width="70"
                Height="70"
                d:Content="#" Content="{Binding TaskFilesAmount}"
                FontFamily="/Resources/Fonts/#Inter" FontWeight="SemiBold" FontSize="40"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                MouseEnter="_taskFilesAmountButton_MouseEnter"
                MouseLeave="_taskFilesAmountButton_MouseLeave"
                Template="{StaticResource NoMouseOverButtonTemplate}"
                />

            <Button
                x:Name="_taskRemoveButton"
                Grid.Column="4"
                Width="70"
                Height="70"
                Click="_taskRemoveButton_Click"
                Template="{StaticResource NoMouseOverButtonTemplate}"
                >
                <Image Source="/Resources/Icons/delete96x96.png" Height="50" Width="50"/>
            </Button>
            
        </Grid>
    </Border>
</UserControl>
