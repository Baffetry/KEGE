<Window x:Class="KEGE_Station.Windows.StatisticWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Title="Статистика" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ControlTemplate x:Key="NoMouseOverButtonTemplate" TargetType="Button">
            <Border x:Name="InnerBorder"
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                <ContentPresenter HorizontalAlignment="Center" 
                          VerticalAlignment="Center" 
                          Margin="{TemplateBinding Padding}"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="InnerBorder" Property="Opacity" Value="0.7"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track x:Name="PART_Track" IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border CornerRadius="4" Background="#DADADA" Margin="2,0"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border x:Name="_Border"
            Background="#FBFBFB"
            BorderBrush="#000"
            BorderThickness="3"
            CornerRadius="20"
            MouseLeftButtonDown="_Border_MouseLeftButtonDown">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.15"/>
        </Border.Effect>

        <DockPanel>
            <Border DockPanel.Dock="Top" 
                    Background="White" 
                    CornerRadius="20 20 0 0" 
                    Padding="25,20"
                    BorderBrush="#F0F0F0"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="_TitlePerson"
                                   Text="{Binding UserName}"
                                   d:Text="Иванов Иван Иванович"
                                   Foreground="#2D3436"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   FontFamily="Inter, Segoe UI"/>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Border Background="#E3F2FD" CornerRadius="4" Padding="6,2">
                                <TextBlock Text="ID ВАРИАНТА" FontSize="10" FontWeight="Black" Foreground="#1976D2" VerticalAlignment="Center"/>
                            </Border>

                            <TextBlock x:Name="_TitleID"
                                       Text="{Binding VariantID}"
                                       d:Text="1dabf022-0d3f-be8b-e64a8af737d7"
                                       Foreground="#636E72"
                                       FontSize="14"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"
                                       FontFamily="Consolas"/>

                            <Button x:Name="_GetVariant_btn"
                                Content="Получить вариант"
                                Margin="15,0,0,0"
                                Padding="10,2"
                                FontSize="11"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Background="#F0F0F0"
                                BorderBrush="#DADADA"
                                Template="{StaticResource NoMouseOverButtonTemplate}"
                                Click="_GetVariant_btn_Click" />
                                
                        </StackPanel>
                    </StackPanel>

                    <Button x:Name="_Close_btn" 
                            Width="40" Height="40"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="White"
                            Click="_Close_btn_Click" 
                            BorderThickness="0"
                            Template="{StaticResource NoMouseOverButtonTemplate}">
                        <Image Source="/Resources/Icons/buttonClose96x96.png"/>
                    </Button>
                </Grid>
            </Border>

            <ScrollViewer x:Name="_ScrollViewer" 
                          Padding="20,20,30,20"
                          VerticalScrollBarVisibility="Auto"
                          ClipToBounds="True"
                          Margin="0 3 0 10"
                          >
                <Grid x:Name="_StatisticGrid">
                    <Grid.RowDefinitions>
                    </Grid.RowDefinitions>
                </Grid>
            </ScrollViewer>
        </DockPanel>
    </Border>
</Window>