<UserControl x:Class="KEGE_Station.User_Controls.ScorePanel"
             x:Name="_Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KEGE_Station.User_Controls"
             mc:Ignorable="d" 
             Background="#fff"
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Canvas Width="200" Height="150">
                <Path Stroke="LightGray" StrokeThickness="20" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="10,100">
                                <ArcSegment Point="190,100" Size="90,90" SweepDirection="Clockwise" />
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>

                <Path x:Name="ProgressPath" Stroke="Green" StrokeThickness="12" 
                      StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="10,100">
                                <ArcSegment x:Name="ProgressArc" Size="90,90" SweepDirection="Clockwise" />
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>

                <TextBlock 
                    d:Text="#"
                    Text="{Binding ScoreText, ElementName=_Root}" 
                    FontSize="60" 
                    FontWeight="Bold"
                    FontFamily="Resources/Fonts/#Inter"
                    Canvas.Left="0" 
                    Canvas.Top="45" 
                    Width="200" TextAlignment="Center"
                    Margin="0 0 0 0"
                    />
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
