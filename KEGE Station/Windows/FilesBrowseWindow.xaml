<Window x:Class="KEGE_Station.Windows.FilesBrowseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True" 
        Background="Transparent" 
        Title="FilesBrowseWindow" Height="400" Width="300"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Storyboard x:Key="ControlSlideInAnimation">
            <DoubleAnimation
                Storyboard.TargetName="_Border"
                Storyboard.TargetProperty="Opacity"
                From="0.0" To="1.0" Duration="0:0:0.3"/>
        </Storyboard>

        <Storyboard x:Key="ControlSlideOutAnimation" Completed="ControlSlideOutAnimation_Completed">
            <DoubleAnimation
                Storyboard.TargetName="_Border"
                Storyboard.TargetProperty="Opacity"
                From="1.0" To="0.0" Duration="0:0:0.2"/>
        </Storyboard>
    </Window.Resources>

    <Border x:Name="_Border"
            Background="White"
            Opacity="0"
            CornerRadius="15"
            BorderBrush="#000"
            BorderThickness="3">

        <StackPanel x:Name="MainStackPanel">
            
            <Label Content="Файлы" 
                   FontWeight="SemiBold" 
                   FontSize="24"
                   HorizontalContentAlignment="Center"
                   Margin="0 10"/>
            
            <Separator Background="#000" Margin="10 0"/>

            <Grid x:Name="FileGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                
            </Grid>
            
        </StackPanel>
    </Border>
</Window>